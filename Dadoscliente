      <script>
        function adicionarContato() {
          const container = document.getElementById('contatoContainer');
      
          const novoGrupo = document.createElement('div');
          novoGrupo.className = 'row mb-3 align-items-end contato-grupo';
      
          novoGrupo.innerHTML = `
            <div class="col-md-4">
              <select class="form-select">
                <option selected disabled>Escolha</option>
                <option>Padr√£o</option>
                <option>Padr√£o I</option>
                <option>Celular</option>
                <option>Celular I</option>
                <option>WhatsApp</option>
                <option>Contato Vendedor</option>
                <option>M√£e</option>
                <option>Pai</option>
              </select>
            </div>
            <div class="col-md-3">
              <input type="tel" class="form-control">
            </div>
            <div class="col-md-1">
              <button type="button" class="btn btn-outline-danger btn-sm" onclick="removerContato(this)">üóëÔ∏è</button>
            </div>
          `;
      
          container.appendChild(novoGrupo);
        }
      
        function removerContato(botao) {
          const linha = botao.closest('.contato-grupo');
          linha.remove();
        }
      </script>
